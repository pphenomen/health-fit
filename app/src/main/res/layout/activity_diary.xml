<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="16dp">

        <TextView
            android:id="@+id/diaryTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/diary_title"
            android:textSize="25sp"
            android:padding="8dp" />

        <!-- утро -->
        <TextView
            android:id="@+id/morningTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/morning_title"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginTop="16dp" />
        <ListView
            android:id="@+id/listMorning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp" />
        <TextView
            android:id="@+id/totalMorning"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kbju_placeholder"
            android:padding="8dp" />
        <Button
            android:id="@+id/btnAddMorning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_button"
            android:layout_gravity="center_horizontal" />

        <!-- обед -->
        <TextView
            android:id="@+id/lunchTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/lunch_title"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginTop="16dp" />
        <ListView
            android:id="@+id/listLunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp" />
        <TextView
            android:id="@+id/totalLunch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kbju_placeholder"
            android:padding="8dp" />
        <Button
            android:id="@+id/btnAddLunch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_button"
            android:layout_gravity="center_horizontal" />

        <!-- ужин -->
        <TextView
            android:id="@+id/dinnerTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/dinner_title"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginTop="16dp" />
        <ListView
            android:id="@+id/listDinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp" />
        <TextView
            android:id="@+id/totalDinner"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kbju_placeholder"
            android:padding="8dp" />
        <Button
            android:id="@+id/btnAddDinner"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_button"
            android:layout_gravity="center_horizontal" />

        <!-- перекус -->
        <TextView
            android:id="@+id/snackTitle"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/snack_title"
            android:textSize="18sp"
            android:padding="8dp"
            android:layout_marginTop="16dp" />
        <ListView
            android:id="@+id/listSnack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:minHeight="100dp" />
        <TextView
            android:id="@+id/totalSnack"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/kbju_placeholder"
            android:padding="8dp" />
        <Button
            android:id="@+id/btnAddSnack"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/add_button"
            android:layout_gravity="center_horizontal" />

        <TextView
            android:id="@+id/totalDay"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="За день: 0 ккал, Б:0 Ж:0 У:0"/>
    </LinearLayout>
</ScrollView>